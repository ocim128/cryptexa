{
  "name": "cryptexa-notes",
  "version": "1.0.0",
  "private": true,
  "description": "Tabbed, password-encrypted notes. Frontend + Node/Express backend storing only encrypted blobs.",
  "main": "server.js",
  "scripts": {
    "start": "set NODE_ENV=production && node server.js",
    "dev": "set NODE_ENV=development && node server.js",
    "dev:watch": "set NODE_ENV=development && node --watch server.js",
    "prod": "set NODE_ENV=production && node server.js",
    "build": "node build.js",
    "bundle": "esbuild src/app.js --bundle --minify --outfile=app.min.js --format=iife --target=es2020",
    "bundle:dev": "esbuild src/app.js --bundle --outfile=app.js --format=iife --target=es2020 --sourcemap",
    "lint": "eslint .",
    "test": "vitest run",
    "test:e2e": "playwright test"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.17"
  }
}