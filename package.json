{
  "name": "cryptexa-notes",
  "version": "1.0.0",
  "private": true,
  "description": "Tabbed, password-encrypted notes. Frontend + Node/Express backend storing only encrypted blobs.",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:win": "set NODE_ENV=production && node dist/server.js",
    "dev": "set NODE_ENV=development && tsx server.ts",
    "dev:watch": "set NODE_ENV=development && tsx watch server.ts",
    "prod": "node dist/server.js",
    "build": "node build.js",
    "postinstall": "npm run build",
    "bundle": "esbuild src/app.ts --bundle --minify --outfile=app.min.js --format=iife --target=es2020",
    "bundle:dev": "esbuild src/app.ts --bundle --outfile=app.js --format=iife --target=es2020 --sourcemap",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "test:e2e": "playwright test"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}